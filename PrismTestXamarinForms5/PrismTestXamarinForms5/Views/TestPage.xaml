<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismTestXamarinForms5.Views.TestPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="Button1" Grid.Row="0" Text="Hide me and show button 2" Clicked="Button1_OnClicked" IsVisible="True" BackgroundColor="LightPink" VerticalOptions="Center"/>

        <Button x:Name="Button2" Grid.Row="1" Text="Hide me and show button 1" Clicked="Button2_OnClicked" IsVisible="False" BackgroundColor="LightGreen" VerticalOptions="Center"/>

    </Grid>

</ContentPage>